<%= form_with(model: contribution, local: true) do |form| %>
  <% if contribution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>

      <ul>
      <% contribution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= form.label :title, :title,  style: 'font-family: Verdana, Geneva, sans-serif; font-size: 10pt; color: #828282;   display: inline-block;' %>
      <%= form.text_field :title, id: :contribution_title, size: '50' %>
  </div>

  <div class="field">
    <%= form.label :url, :url , style: 'font-family: Verdana, Geneva, sans-serif; font-size: 10pt; color: #828282;   display: inline-block;' %>
    <%= form.text_field :url, id: :contribution_url, size: '50', style: 'margin-left: 1%;'%>
  </div>
  <b>or</b>

  <br>
  <div class="field">
    <%= form.label :text, :ask, style: 'font-family: Verdana, Geneva, sans-serif; font-size: 10pt; color: #828282;   display: inline-block; position: absolute; margin-top:2.5%' %>
    <%= form.text_area :text, id: :contribution_text, rows: '4', cols: '70', style: 'margin-left:3%;' %>
  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>
