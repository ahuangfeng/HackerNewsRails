<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Created:</strong>
  <%= time_ago_in_words(@user.created_at) %> ago
</p>

<% if logged_in? and current_user.id==@user.id%>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<% end %>

<p>
  <strong>About:</strong>
  <%= @user.about %>
</p>

<% if logged_in? and current_user.id==@user.id %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', contributions_path %>
