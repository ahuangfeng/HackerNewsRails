<h2>Add a reply to reply</h2>
<p style="  font-family: Verdana, Geneva, sans-serif; color: #828282; font-size: 8pt;"><%= @comment.user.name%> 
  <%= time_ago_in_words(@comment.created_at) %> ago |  
  <a href="/replies/<%=@comment.id%>">
    parent
  </a> | on
  <a href="/contributions/<%=@comment.contribution.id%>">
    <%= @comment.contribution.title %>
  </a>
</p>
<p>
  <strong>Reply: </strong>
  <%=  @comment.body  %>
</p>
  
<% if logged_in? %>
  <div class="add-comment row">
    <div class="col-sm-6">
      <%= render 'form', reply: @newreply %>
    </div>
  </div>
<% end %>