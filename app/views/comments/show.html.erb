<h1>Add a reply</h1>
  <p style="  font-family: Verdana, Geneva, sans-serif; color: #828282; font-size: 8pt;"><%= @comment.user.name%> 
  <%= time_ago_in_words(@comment.created_at) %> ago 
  | on  <a href="/contributions/<%=@comment.contribution.id%>"><%=@comment.contribution.title %></a> </p>
  <p>
    <%=  @comment.body  %>
  </p>
  
  <% if logged_in? %>
    <div class="add-comment row">
      <div class="col-sm-6">
        <%= form_for :reply do |f| %>
          <div class="form-group">
            <%= f.text_area :body, class: "form-control", rows: 10, required: true %>
          </div>
          <div class="form-group">
            <%= f.button "reply", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
